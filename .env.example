#############################################
# GM-METEO Pipeline — .env (TEMPLATE)
# Keep secrets out of Git. Use placeholders.
#############################################




# -------- Pipeline identity --------
PIPELINE_NAME=GM-METEO
PIPELINE_ENV=local
PIPELINE_USER=gustavo

# -------- API provider (NO fallback) --------
# Choose exactly one: weatherbit | ipma | icao
PIPELINE_API_PROVIDER=icao

# Optional: override the URL if you want (normally leave empty)
# PIPELINE_API_URL=

# -------- Weatherbit (only if provider=weatherbit) --------
WEATHERBIT_API_KEY=<YOUR_WEATHERBIT_KEY>
WEATHERBIT_CITY=Maia,PT

# -------- IPMA (only if provider=ipma) --------
IPMA_STATION_IDS=1200545
IPMA_STATION_NAMES=1200545:Pedras Rubras (Aeródromo)
IPMA_FETCH_STATIONS_META=0

# -------- ICAO / METAR (only if provider=icao) --------
ICAO_CODE=LPPR

# Optional (if you use GeoNames as helper later)
GEONAMES_ICAO_ENDPOINT=https://secure.geonames.org/weatherIcaoJSON
GEONAMES_USERNAME=<YOUR_GEONAMES_USERNAME>

# -------- DB targets --------
# Targets file used by the pipeline
PIPELINE_DB_TARGETS_FILE=db_targets_local.json
# ALL Targets can receive more than core values, leave blank if not all can accept extra collumns
PIPELINE_SQL_EXTRAS_COLUMN=extras

# -------- MySQL / MariaDB / TiDB DSNs (if used by targets file) --------
MARIADB_DSN=mysql://<USER>:<PASSWORD>@<HOST>:3306/meteo
TIDB_DSN=mysql://<USER>:<PASSWORD>@<HOST>:4000/meteo

# -------- Postgres-compatible DSNs (if used by targets file) --------
AIVEN_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:5432/meteo?sslmode=require
COCKROACH_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:26257/meteo?sslmode=verify-full
YUGABYTE_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:5433/meteo?sslmode=require
SUPABASE_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:5432/postgres?sslmode=require
NEON_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:5432/meteo?sslmode=require
CRATEDB_DSN=postgresql://<USER>:<PASSWORD>@<HOST>:5432/meteo?sslmode=require

# -------- MongoDB (if used by targets file) --------
MONGO_URI=mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>/<DB>?retryWrites=true&w=majority

# -------- Email / Notifications --------
PIPELINE_EMAIL_FROM=<FROM_EMAIL>
PIPELINE_EMAIL_TO=<TO_EMAIL_1>,<TO_EMAIL_2>

# SMTP fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<SMTP_USER>
SMTP_PASS=<SMTP_APP_PASSWORD>

# Resend (optional)
RESEND_API_KEY=<RESEND_API_KEY>
RESEND_FROM=GM Pipeline <onboarding@resend.dev>
